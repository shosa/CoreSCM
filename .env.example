# CoreSCM - Environment Configuration
# Copia questo file in .env e configura con i tuoi valori

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=CoreSCM
APP_ENV=production
APP_DEBUG=false
APP_URL=https://scm.tuodominio.com

# ===========================================
# DATABASE (Server Aruba)
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# ===========================================
# API SYNC (Sincronizzazione con CoreGre)
# ===========================================
# Secret key per autenticazione API
# GENERA UNA CHIAVE CASUALE FORTE!
API_SECRET=change-this-to-random-secret-key-min-32-chars

# ===========================================
# SESSION
# ===========================================
SESSION_LIFETIME=7200
SESSION_NAME=CORESCM_SESSION

# ===========================================
# SECURITY
# ===========================================
# Rate limiting login (tentativi per ora)
LOGIN_MAX_ATTEMPTS=10
LOGIN_LOCKOUT_TIME=3600

# ===========================================
# TIMEZONE & LOCALE
# ===========================================
APP_TIMEZONE=Europe/Rome
APP_LOCALE=it

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=error
LOG_MAX_FILES=30
